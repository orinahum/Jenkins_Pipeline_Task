
pipeline {
    agent {label 'workers'}
    parameters {
        string(name: 'APP_DIR', 
            defaultValue: '/tmp/Details_App/',
            description: 'The path Directory for project Details_app'
        )
        string(name: 'APP_VER',
            defaultValue: '1:0.0.0',
            description: 'The Version for builds Details_app'
        )
        string(name: 'IMAGE_NAME',
            defaultValue: 'orinahum1982/details_app_pipeline'
        )
        string(name: 'TAG_NAME',
            defaultValue: 'latest'
        )
    }

    stages {
        stage('Clone/Pull Git Details_App') {
            steps {
                sh "chmod +x scripts/00_git_details_app.sh"
                sh "bash scripts/00_git_details_app.sh"
            }
        }
    
        stage('Install Docker and Docker Compose') {
            steps {
                sh "chmod +x scripts/04_install_build.sh"
                sh "bash scripts/04_install_build.sh"
            }
        }

        stage('Exec build and push into Docker Hub') {
            steps {
                sh "chmod +x scripts/04_exec_build.sh"
                sh "bash scripts/04_exec_build.sh"
            }
        }
    }
    // post {
    //     always {
    //         archiveArtifacts artifacts: 'reports/03_pytest_results.md', followSymlinks: false, onlyIfSuccessful: true
    //         archiveArtifacts artifacts: 'reports/03_pytest_results.html, reports/assets/style.css', followSymlinks: false, onlyIfSuccessful: true
    //     }
    // }

}
