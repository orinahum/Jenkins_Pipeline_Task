
pipeline {
    agent {label 'workers'}
        stages {
        tage('Clone/Pull Git Details_App') {
            steps {
                sh '''
                chmod +x scripts/00_git_details_app.sh
                bash scripts/00_git_details_app.sh
                '''
            }
        }
        stage('Install Codespell & Shellchack') {
            steps {
                sh '''
                chmod +x scripts/02_codeshell_spellcheck_install.sh
                bash scripts/02_codeshell_spellcheck_install.sh
                '''
            }
        }

        stage('Exec Codespell & Shellchack') {
            steps {
                sh '''
                chmod +x scripts/02_codeshell_spellcheck_exec.sh
                bash scripts/02_codeshell_spellcheck_exec.sh /tmp/Details_App/
                '''
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: './reports/code_shell_spell_results.md', allowEmptyArchive: true
        }
    }
}
