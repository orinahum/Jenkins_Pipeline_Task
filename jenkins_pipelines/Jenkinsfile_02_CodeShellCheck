
pipeline {
    agent {label 'workers'}
        stages {
        tage('Clone/Pull Git Details_App') {
            steps {
                sh '''
                chmod +x scripts/00_git_details_app.sh
                bash scripts/00_git_details_app.sh
                '''
            }
        }
        stage('Install Codespell & Shellcheck') {
            steps {
                sh '''
                chmod +x scripts/02_install_codespell_shellcheck.sh
                bash scripts/02_install_codespell_shellcheck.sh
                '''
            }
        }

        stage('Exec Shell Check') {
            steps {
                sh '''
                chmod +x scripts/02_exec_shellcheck.sh
                bash scripts/02_exec_shellcheck.sh './' '/tmp/Details_App/'
                '''
            }
        }

        stage('Exec Code Spell') {
            steps {
                sh '''
                chmod +x scripts/02_exec_codespell.sh
                bash scripts/02_exec_codespell.sh './' '/tmp/Details_App/'
                '''
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: './reports/shellcheck_results.md', allowEmptyArchive: true
            archiveArtifacts artifacts: './reports/codespell_results.md', allowEmptyArchive: true

        }
    }
}
