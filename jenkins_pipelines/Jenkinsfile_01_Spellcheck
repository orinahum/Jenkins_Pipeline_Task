
pipeline {
    agent {label 'workers'}
    // agent {label 'worker-2'}
    stages {
        tage('Clone/Pull Git Details_App') {
            steps {
                sh '''
                chmod +x scripts/00_git_details_app.sh
                bash scripts/00_git_details_app.sh
                '''
            }
        }

        stage('Install aSpell') {
            steps {
                sh '''
                chmod +x scripts/01_aspell_install.sh
                bash scripts/01_aspell_install.sh
                '''
            }
        }

        stage('Exec aSpell') {
            steps {
                sh '''
                chmod +x scripts/01_aspell_exec.sh
                pwd
                bash scripts/01_aspell_exec.sh /tmp/Details_App/
                '''
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: 'reports/spellcheck_results.md', allowEmptyArchive: true
        }
    }
}
