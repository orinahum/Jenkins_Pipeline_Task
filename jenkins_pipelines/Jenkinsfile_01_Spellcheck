
pipeline {
    agent {label 'workers'}
    parameters {
        string(name: 'APP_DIR', 
            defaultValue: '/tmp/Details_App/',
            description: 'The path Directory for project Details_app'
        )
        string(name: 'OUTPUT_DIR',
            defaultValue: "/home/jenkins/reports",
            description: 'report directory'
        )
    }

    stages {
        stage('Clone/Pull Git Details_App') {
            steps {
                sh "chmod +x scripts/00_git_details_app.sh"
                sh "bash scripts/00_git_details_app.sh"
            }
        }
        stage('Install aspell') {
            steps {
                sh "chmod +x scripts/01_install_aspell.sh"
                sh "bash scripts/01_install_aspell.sh"
            }
        }
        stage('Exec aspell') {
            steps {
                sh "chmod +x scripts/01_exec_aspell.sh"
                sh "bash scripts/01_exec_aspell.sh /tmp/Details_App/"
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: '"${OUTPUT_DIR}/01_spellcheck_results.md', followSymlinks: false, onlyIfSuccessful: true
        }
    }
}
