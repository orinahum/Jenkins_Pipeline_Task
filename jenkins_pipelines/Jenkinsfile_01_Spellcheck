
pipeline {
    agent {label 'workers'}
    // agent {label 'worker-2'}
    parameters{
        String(name: 'APP_DIR', defaultValue: "/tmp/details_app", description: "The Directory of the project Details_App")
        String(name: 'EXCLUDE_EXTENTIONS', defaultValue:".git .DS_Store .jpi .key .enc .mp4 .jpg .lock .jpi .css ico", description:"List of file extention of the spell checks")
    }
    stages {
        stage('Clone/Pull Git Details_App') {
            steps {
                sh """
                chmod +x scripts/00_git_details_app.sh
                bash scripts/00_git_details_app.sh
                """
            }
        }

        stage('Install aSpell') {
            steps {
                sh """
                chmod +x scripts/01_install_aspell.sh
                bash scripts/01_install_aspell.sh
                """
            }
        }

        stage('Exec aSpell') {
            steps {
                sh """
                chmod +x scripts/01_exec_aspell.sh
                bash scripts/01_exec_aspell.sh /tmp/Details_App/
                """
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: "reports/spellcheck_results.md", allowEmptyArchive: true
        }
    }
}
